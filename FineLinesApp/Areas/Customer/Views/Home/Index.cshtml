@model IEnumerable<FineLines.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<br/>

<div class="row pb-3 backgroundWhite">
   @foreach (var products in Model)
    {
    <div class ="col-lg-3 col-md-6">
        <div class= "row p-2"> 
            <div class = "col p1">
                <div class="card-deck">
                    <img class="card-img-top rounded"  src="@products.ImageUrl" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@products.Title</h5>
                        <p class="card-text text-info">By Author: @products.Author</p>
                        <p class="card-text"><b>Price: @products.Price.ToString("0.00") SEK</b></p>
                        <a asp-action="details" class="btn btn-primary form-control" asp-route-id="@products.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
</div>

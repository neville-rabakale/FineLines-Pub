@model IEnumerable<FineLines.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="row pb-3 backgroundWhite">
   @foreach (var products in Model)
    {
    <div class ="col-lg-3 col-md-6">
        <div class= "row p-2"> 
            <div class = "col p1">
                <div class="card-deck">
                    <img class="card-img-top rounded"  src="@products.ImageUrl" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@products.Title</h5>
                        <p class="card-text">Author: @products.Author</p>
                        <p class="card-text">Price: @products.Price</p>
                        <a href="#" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
</div>
